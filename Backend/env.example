PORT=3000
MONGO_DB_CONNECTION_STRING=your_mongodb_connection_string_here
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY=your_private_key
GEMINI_API_KEY=your_gemini_api_key
DEVELOPMENT_CLIENT_URL=http://localhost:5173

# ============================================
# Email Configuration for Project Reports
# ============================================
# REQUIRED: Configure these to send project reports to clients

# Feelize Email Credentials (contact@feelizecode.com)
EMAIL_USER=contact@feelizecode.com
EMAIL_PASS=your_email_password_here

# Email From Name (displayed to recipients)
EMAIL_FROM_NAME=Feelize Team

# Option 1: Use a named service (leave SMTP_HOST empty)
# EMAIL_SERVICE=gmail

# Option 2: Use custom SMTP (recommended for Spacemail, etc.)
# If SMTP_HOST is set, it will override EMAIL_SERVICE
SMTP_HOST=smtp.spacemail.com
SMTP_PORT=587
SMTP_SECURE=false

# ============================================
# Newsletter SMTP Configuration (Legacy)
# ============================================
# For newsletter notifications
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@feelize.com
